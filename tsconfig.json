{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2018", // Upgraded to es2018 for better compatibility
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
